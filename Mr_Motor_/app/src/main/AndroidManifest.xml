        android:supportsRtl="true"
        android:theme="@style/splashScreenTheme">
        <activity android:name=".ui.SplashScreen"></activity>
        <activity android:name=".ui.ForgotPasswordPage" />
        <activity android:name=".ui.SignUpPage" />
