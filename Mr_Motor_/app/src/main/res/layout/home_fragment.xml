<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="13dp"
        android:background="@color/background_color"
        tools:context=".ui.home.HomeFragment">

        <ImageView
            android:id="@+id/iv_avatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_avatar"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="9dp"/>

        <EditText
            android:layout_marginTop="9dp"
            android:layout_marginLeft="15dp"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:textColorHint="@color/search_hint_color"
            android:drawableLeft="@drawable/ic_search"
            android:drawablePadding="9dp"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/iv_avatar"
            app:layout_constraintRight_toRightOf="parent"
            android:hint="@string/search_hint"
            android:paddingLeft="14dp"
            android:paddingRight="14dp"
            android:paddingStart="14dp"
            android:background="@drawable/rectangle_rounded" />

        <LinearLayout
            android:id="@+id/ll_home_frames12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/iv_avatar"
            app:layout_constraintLeft_toLeftOf="parent"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginTop="17dp">

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="160dp"
                android:layout_weight="1"
                android:scaleType="fitXY"

                android:src="@drawable/ic_home_frame_1"
                android:background="@color/background_color"
                android:paddingRight="6dp"
                android:paddingLeft="6dp"/>
            <ImageButton
                android:layout_width="0dp"
                android:layout_height="160dp"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:src="@drawable/ic_home_frame_2"
                android:background="@color/background_color"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"/>
        </LinearLayout>

        <ImageButton
            android:id="@+id/ib_home_frame_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ll_home_frames12"
            android:src="@drawable/ic_home_frame_3"
            android:layout_marginTop="19dp"
            android:scaleType="centerCrop"
            android:padding="6dp"
            android:background="@color/background_color"/>
        <!--android:background="@drawable/rectangle_rounded"-->
        <!--android:backgroundTint="#0984E3"-->


        <ImageButton
            android:id="@+id/ib_home_frame_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ib_home_frame_3"
            android:src="@drawable/ic_home_frame_4"
            android:layout_marginTop="19dp"
            android:scaleType="centerCrop"
            android:padding="6dp"
            android:background="@color/background_color"/>

        <ImageButton
            android:id="@+id/ib_home_frame_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ib_home_frame_4"
            android:src="@drawable/ic_home_frame_5"
            android:layout_marginTop="19dp"
            android:scaleType="centerCrop"
            android:padding="6dp"
            android:background="@color/background_color"/>

        <ImageButton
            android:id="@+id/ib_home_frame_6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ib_home_frame_5"
            android:src="@drawable/ic_home_frame_6"
            android:layout_marginTop="19dp"
            android:scaleType="centerCrop"
            android:padding="6dp"
            android:background="@color/background_color"/>

    </androidx.constraintlayout.widget.ConstraintLayout>






</ScrollView>