<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/motion_container">

    <View
        android:id="@+id/v_navigation"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:background="@drawable/rounded_corners"
        android:backgroundTint="@color/search_hint_color"
        android:translationZ="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/search_hint_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ImageButton
        android:id="@+id/ib_homePage"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/ic_home"
        android:translationZ="10dp"
        app:layout_constraintBottom_toBottomOf="@id/v_navigation"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/v_navigation" />

    <ImageButton
        android:id="@+id/ib_newsPage"
        android:layout_width="18dp"
        android:layout_height="24dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/ic_news"
        android:translationZ="10dp"
        app:layout_constraintBottom_toBottomOf="@id/v_navigation"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@id/ib_homePage"
        app:layout_constraintTop_toTopOf="@id/v_navigation" />

    <ImageButton
        android:id="@+id/ib_quizPage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:background="@drawable/ic_tasklist"
        android:translationZ="10dp"
        app:layout_constraintBottom_toBottomOf="@id/v_navigation"
        app:layout_constraintLeft_toLeftOf="@id/ib_homePage"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/v_navigation" />

    <FrameLayout
        android:id="@+id/fl_fragments"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="62dp"
        app:layout_constraintBottom_toTopOf="@id/v_navigation"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>