<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="165dp">

    <View
        android:id="@+id/v_stroke_accent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/rounded_corners_3dp"
        android:backgroundTint="@color/accent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="3dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="3dp"
        android:layout_marginBottom="3dp"
        android:background="@color/background_color"
        app:layout_constraintBottom_toBottomOf="@id/v_stroke_accent"
        app:layout_constraintLeft_toLeftOf="@id/v_stroke_accent"
        app:layout_constraintRight_toRightOf="@id/v_stroke_accent"
        app:layout_constraintTop_toTopOf="@id/v_stroke_accent" />

    <TextView
        android:id="@+id/tv_quiz_name"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="What car is yours?"
        android:layout_marginStart="19dp"
        android:layout_marginTop="14dp"
        />

    <View
        android:id="@+id/v_red_stroke"
        android:layout_width="match_parent"
        android:layout_height="27dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="18dp"
        android:layout_marginStart="18dp"
        android:layout_marginBottom="22dp"
        android:background="@drawable/rounded_corners"
        android:backgroundTint="@color/red"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_inner_constraint"
        android:layout_width="0dp"
        android:layout_height="27dp"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="18dp"
        android:layout_marginLeft="18dp"
        android:layout_marginBottom="22dp"
        app:layout_constraintBottom_toBottomOf="parent">
        <View
            android:id="@+id/v_green_stroke"
            android:layout_width="match_parent"
            android:layout_height="27dp"
            android:background="@drawable/rounded_corners"
            android:backgroundTint="@color/mint_green"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <TextView
        android:id="@+id/tv_percentage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="@id/v_red_stroke"
        app:layout_constraintTop_toTopOf="@id/v_red_stroke"
        app:layout_constraintBottom_toBottomOf="@id/v_red_stroke"
        android:layout_marginEnd="10dp"
        tools:text="50%"
        android:textColor="@color/black"
        android:textStyle="bold"
        />

    <View
        android:id="@+id/v_container_for_number"
        android:layout_width="90dp"
        android:layout_height="35dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="17dp"
        android:background="@drawable/rounded_corners_30dp"
        android:backgroundTint="@color/extra_light_grey"/>

    <TextView
        android:id="@+id/tv_result_in_numbers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/v_container_for_number"
        app:layout_constraintRight_toRightOf="@id/v_container_for_number"
        app:layout_constraintBottom_toBottomOf="@id/v_container_for_number"
        app:layout_constraintLeft_toLeftOf="@id/v_container_for_number"
        tools:text="10/20"
        android:textColor="@color/black"
        android:textSize="24sp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>